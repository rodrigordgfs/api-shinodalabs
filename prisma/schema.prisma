generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  tags        String[]
  image       String
  link        String
  repository  String?

  @@map("projects")
}

model Career {
  id           String    @id @default(cuid())
  title        String
  company      String
  location     String
  locationType String
  description  String
  skills       String[]
  startDate    DateTime
  endDate      DateTime?

  @@map("career")
}
